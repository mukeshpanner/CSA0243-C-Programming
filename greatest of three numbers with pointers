 int a,b,c;
 int *p1,*p2,*p3;
 printf("enter the number of A :");
 scanf("%d",&a);
 printf("enter the number of b:");
 scanf("%d",&b);
 printf("enter the number of c:");
 scanf("%d",&c);

 p1 = &a;
 p2 = &b;
 p3 = &c;
 if ((*p1>=*p2)&&(*p1>=*p3))
 printf("entered number A id greater:%d",*p1);
 else
 {
  if((*p2>=*p1)&&(*p2>=*p3))
  printf("enteres number B is greater:%d",*p2);
  else
  printf("entered nuber C is greater:%d",*p3);
  }
  return 0;
}
